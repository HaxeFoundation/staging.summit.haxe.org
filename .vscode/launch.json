{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "firefox",
			"request": "launch",
			"reAttach": true,
			"name": "Launch website",
			"file": "${workspaceFolder}/out/index.html",
			"reloadOnChange": {
				"watch": "${workspaceFolder}/out/**/*",
				"ignore": "**/node_modules/**"
			},
			"preLaunchTask": "Build"
		}
	]
}
